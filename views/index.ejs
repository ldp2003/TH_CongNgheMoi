<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="index.css">
</head>

<body>
    <div class="content">
        <form action="/save" method="post">
            <input type="text" name="id" placeholder="Mã môn học"><br>
            <input type="text" name="name" placeholder="Tên môn học"><br>
            <input type="text" name="course_type" placeholder="Loại môn học"><br>
            <input type="text" name="semester" placeholder="Học kỳ"><br>
            <input type="text" name="department" placeholder="Khoa"><br>
            <button type="submit">Lưu</button>
        </form>
        <form action="/delete" method="post">
            <table>
                <caption>Danh sách các môn học</caption>
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên môn học</th>
                        <th>Loại môn học</th>
                        <th>Học kỳ</th>
                        <th>Khoa</th>
                        <th>Xóa</th>
                        <th>Chọn nhiều</th>
                    </tr>
                </thead>
                <tbody>
                    <% courses.forEach(item=> { %>
                        <tr>
                            <td>
                                <%= item.id %>
                            </td>
                            <td>
                                <%= item.name %>
                            </td>
                            <td>
                                <%= item.course_type %>
                            </td>
                            <td>
                                <%= item.semester %>
                            </td>
                            <td>
                                <%= item.department %>
                            </td>
                            <td><form action="/delete/<%= item.id %>">
                                <input type="hidden" name="id" value="<%= item.id %>">
                                <button type="submit">Xóa</button>
                            </form></td>
                            <td><input type="checkbox" name="courseIds" value="<%= item.id %>"></td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>

            <button type="submit">Xóa</button>
        </form>
    </div>
</body>